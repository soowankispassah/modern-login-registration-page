<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('navbar') %>
    <div class="container">
        <h1>Your Profile</h1>
        <p id="userData"></p>
    </div>
    <script>
        async function fetchProfileData() {
            const response = await fetch('/profile-data');
            if (response.ok) {
                const data = await response.json();
                document.getElementById('userData').innerText = `Welcome, ${data.username}`;
            } else {
                alert('Error fetching profile data');
            }
        }

        fetchProfileData();
    </script>
</body>
</html>
